<Window x:Class="Odometria.Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Odometria"
      mc:Ignorable="d" 
      Height="450" Width="450" MinHeight="450" MinWidth="450"
      Title="Odometría">

    <Grid>

        <ListView Name="listCord" Grid.Row="1" Grid.ColumnSpan="3" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Margin="10,10,10,20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="X" DisplayMemberBinding="{Binding X}"></GridViewColumn>
                    <GridViewColumn Header="Y" DisplayMemberBinding="{Binding Y}"></GridViewColumn>
                    <GridViewColumn Header="Thetha" DisplayMemberBinding="{Binding Theta}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
